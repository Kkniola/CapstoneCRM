@model CapstoneSalesCRM.Pages.Roles.IndexModel

@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].RoleDescription)
            </th>
            <th></th>
        </tr>
    </thead>
