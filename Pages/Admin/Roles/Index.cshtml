@page
@model CapstoneSalesCRM.Pages.Roles.IndexModel

@{
    ViewData["Title"] = "Roles";
}
<head>
    <link rel="stylesheet" href="/css/custom.css" />
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
</head>


<div class="row">
    <div class="col">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <h1 class="text-primary m-0 fw-bold">Roles</h1>
            </div>
            <div class="card-body">
                <p>
                    <a asp-page="Create">Create New</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Role[0].RoleDescription)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Role)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleDescription)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.RoleID"><i class="far fa-edit"></i></a> |
                                    <a asp-page="./Details" asp-route-id="@item.RoleID"><i class="far fa-address-card"></i></a> |
                                    <a asp-page="./Delete" asp-route-id="@item.RoleID"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p>
                    <a href="/Index">Return to Home</a>
                </p>
            </div>
        </div>
    </div>
</div>
