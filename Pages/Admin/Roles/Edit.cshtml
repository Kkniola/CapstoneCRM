@page
@model CapstoneSalesCRM.Pages.Roles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary m-0 fw-bold">Edit</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Role.RoleID" />
            <div class="form-group">
                <label asp-for="Role.RoleDescription" class="control-label"></label>
                <input asp-for="Role.RoleDescription" class="form-control" />
                <span asp-validation-for="Role.RoleDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
