@page
@model CapstoneSalesCRM.Pages.States.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<head>
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
    <style>
        tr:nth-last-child(even) {
            background-color: #EFF8FF;
        }

        hr {
            clear: both;
            visibility: hidden;
        }
    </style>
</head>
<body>
    <div>
        <div class="row">
            <div class="col">
                <div class="card shadow mb-3">
                    <div class="card-header py-3">
                        <p class="text-primary m-0 fw-bold">State</p>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.State.StateName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.State.StateName)
                            </dd>
                        </dl>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.State.StateID">Edit</a>
            <a asp-page="./Delete" asp-route-id="@Model.State.StateID" class="btn btn-danger"> Delete <i class="fas fa-trash-alt"></i></a>
            <a asp-page="./Index" class="btn btn-primary">Back to List <i class="fas fa-undo"></i></a>
            <a class="btn btn-primary" asp-page="/Index">Return to Home</a>
        </div>
    </div>
</body>