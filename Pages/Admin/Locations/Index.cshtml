@page
@model CapstoneSalesCRM.Pages.Locations.IndexModel

@{
    ViewData["Title"] = "Locations";
}
<head>
    <link rel="stylesheet" href="/css/custom.css" />
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
</head>

<h1>Locations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location[0].LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].LocationAddress1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].LocationAddress2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].LocationCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].MainPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location[0].Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Location) {
        <tr>
       
            <td>
                @Html.DisplayFor(model => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationAddress2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LocationID"><i class="far fa-edit"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.LocationID"><i class="far fa-address-card"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.LocationID"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a href="/Index">Return to Home</a>
</p>