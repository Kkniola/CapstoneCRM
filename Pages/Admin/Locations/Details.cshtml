@page
@model CapstoneSalesCRM.Pages.Locations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<head>
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
    <style>
        tr:nth-last-child(even) {
            background-color: #EFF8FF;
        }

        hr {
            clear: both;
            visibility: hidden;
        }
    </style>
</head>
<body>
<div>
    <div class="row">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Location</p>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationAddress1)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationAddress1)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationAddress2)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationAddress2)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationCity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationCity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.Country)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.Country)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.MainPhone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.MainPhone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.State)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.State.StateName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.Company.CompanyName)
                        </dd>
                    </dl>
                </div>
                
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div>
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Location.LocationID">Edit</a>
        <a asp-page="./Delete" asp-route-id="@Model.Location.LocationID" class="btn btn-danger"> Delete <i class="fas fa-trash-alt"></i></a>
        <a asp-page="./Index" class="btn btn-primary">Back to List <i class="fas fa-undo"></i></a>
        <a class="btn btn-primary" asp-page="/Index">Return to Home</a>
    </div>
</div>
</body>