@page
@model CapstoneSalesCRM.Pages.Locations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary m-0 fw-bold">Details</h1>

<div>
    <div class="row">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Location</p>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationAddress1)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationAddress1)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationAddress2)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationAddress2)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.LocationCity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.LocationCity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.Country)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.Country)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.MainPhone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.MainPhone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.State)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.State.StateName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Location.Company)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Location.Company.CompanyName)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.Location.LocationID">Edit</a> |
                    <a asp-page="./Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
