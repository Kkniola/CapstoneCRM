@model CapstoneSalesCRM.Pages.Companies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
    <style>
        tr:nth-last-child(even) {
            background-color: #EFF8FF;
        }

        hr {
            clear: both;
            visibility: hidden;
        }
    </style>
</head>
<body>
    <div class="row" style="display: flex">
        <div class="col-auto" style="float:left">
            <h1 class="text-primary m-0 fw-bold">Edit Company</h1>
        </div>
    </div>
    <hr />

    <form method="post">
        <div class="row">
            <div class="col">
                <div class="card shadow mb-3">
                    <div class="card-header py-3">
                        <p class="text-primary m-0 fw-bold">Company Information</p>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Company.CompanyID" />
                        <div class="row">
                            <div class="col">

                                <label asp-for="Company.CompanyName" class="control-label"></label>
                                <input asp-for="Company.CompanyName" class="form-control" />
                                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
                            </div>

                            <div class="col">

                                <label asp-for="Company.Industry.Description" class="control-label"></label>
                                <select asp-for="Company.Industry.Description" class="form-control" asp-items="ViewBag.Description"></select>
                                <span asp-validation-for="Company.Industry.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Company.Website" class="control-label"></label>
                                <input asp-for="Company.Website" class="form-control" />
                                <span asp-validation-for="Company.Website" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Company.LinkedIn" class="control-label"></label>
                                <input asp-for="Company.LinkedIn" class="form-control" />
                                <span asp-validation-for="Company.LinkedIn" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Company.Facebook" class="control-label"></label>
                                <input asp-for="Company.Facebook" class="form-control" />
                                <span asp-validation-for="Company.Facebook" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div>
                <input type="submit" value="&#xf0c7 Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index"><i class="fas fa-undo"></i>&nbsp;Back to List</a>
                    <a class="btn btn-primary" asp-page="/Index">Return to Home</a>
            </div>
        </div>
    </form>
</body>

