@page
@model CapstoneSalesCRM.Pages.Companies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<head>
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
    <style>
        tr:nth-last-child(even) {
            background-color: #EFF8FF;
        }

        hr {
            clear: both;
            visibility: hidden;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card shadow mb-3">
                    <div class="card-header py-3">
                        <h1 class="text-primary m-0 fw-bold">Delete</h1>
                        <h3>Are you sure you want to delete this?</h3>
                    </div>
                    <div class="card-body">
                        <div>
                            <h4>Company</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Company.CompanyName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Company.CompanyName)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Company.Website)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Company.Website)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Company.LinkedIn)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Company.LinkedIn)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Company.Facebook)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Company.Facebook)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Company.Industry)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Company.Industry.IndustryID)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Company.CompanyID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-primary">Back to List <i class="fas fa-undo"></i></a>
        </form>
    </div>
</body>
