@page
@model CapstoneSalesCRM.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Companies";
}
<head>
    <link rel="stylesheet" href="/css/custom.css" />
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
</head>

<h1>Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].LinkedIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Facebook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facebook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyID"><i class="far fa-edit"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyID"><i class="far fa-address-card"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyID"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a href="/Index">Return to Home</a>
</p>