@page
@model CapstoneSalesCRM.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

@*<h1>Details</h1>*@

<div>
    <h1 class="text-primary m-0 fw-bold">@Html.DisplayFor(model => model.Company.CompanyName)</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Website)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.LinkedIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.LinkedIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Facebook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Facebook)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Description)
        </dd>
    </dl>
</div>
<div>
    <h4>Company Locations</h4>

    <table >
        <thead>
            <tr>      
                <th>Location Name</th>
                <th>Location City</th>
                <th>State ID</th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var litem in Model.Location)
            {
                <tr>
                    <th>@Html.DisplayFor(modelItem => litem.LocationName)</th>
                    <th>@Html.DisplayFor(modelItem => litem.LocationCity)</th>
                    <th>@Html.DisplayFor(modelItem => litem.StateID)</th>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
