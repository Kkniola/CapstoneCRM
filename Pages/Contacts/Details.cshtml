    <div class="row" style="display: flex">
        <div class="col-auto" style="float:left" >
            <h1 class="text-primary m-0 fw-bold">
                @Html.DisplayFor(model => model.Contact.FirstName)
                @Html.DisplayFor(model => model.Contact.LastName)
            </h1>
        </div>
        <div class="col" align="right">
            <a asp-page="./Edit" asp-route-id="@Model.Contact.ContactID" class="btn btn-primary btn-sm"> Edit <i class="far fa-edit"></i></a>
