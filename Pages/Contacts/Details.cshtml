                            </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Social Media</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <dl>
                                <dt class="mb-3">
                                    @Html.DisplayNameFor(model => model.Contact.LinkedIn)
                                </dt>
                                <dd class="mb-3">
                                    @Html.DisplayFor(model => model.Contact.LinkedIn)
                                </dd>
                            </dl>
                        </div>
                        <div class="col">
                            <dl>
                                <dt class="mb-3">
                                    @Html.DisplayNameFor(model => model.Contact.Facebook)
                                </dt>
                                <dd class="mb-3">
                                    @Html.DisplayFor(model => model.Contact.Facebook)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Emergency Contact</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <dl>
                                <dt class="mb-3">
                                    @Html.DisplayNameFor(model => model.Contact.EmergencyContactName)
                                </dt>
                                <dd class="mb-3">
                                    @Html.DisplayFor(model => model.Contact.EmergencyContactName)
                                </dd>
                            </dl>
                        </div>
                        <div class="col">
                            <dl>
                            <dt class="mb-3">
                                @Html.DisplayNameFor(model => model.Contact.EmergencyContactNumber)
                            </dt>
                            <dd class="mb-3">
                                @Html.DisplayFor(model => model.Contact.EmergencyContactNumber)
                            </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h4 class="text-primary fw-bold m-0">Activities</h4>
                </div>
                <div class="card-body">

                    <table>

                        <thead>

                            <tr>
                                <th>DateScheduled</th>
                                <th>Date Created</th>
                                <th>Task Description</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Date Completed</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var aitem in Model.Activity)
                            {


                                <tr>
                                    <th>@Html.DisplayFor(modelItem => aitem.DateScheduled)</th>
                                    <th>@Html.DisplayFor(modelItem => aitem.DateCreated)</th>
                                    <th>@Html.DisplayFor(modelItem => aitem.ActivityTask.TaskDescription)</th>
                                    <th>@Html.DisplayFor(modelItem => aitem.Status)</th>
                                    <th>@Html.DisplayFor(modelItem => aitem.Notes)</th>
                                    <th>@Html.DisplayFor(modelItem => aitem.DateCompleted)</th>
                                </tr>

                            }
                        </tbody>
                    </table>

                    <a asp-page="/Activities/Create" asp-route-id="@Model.Contact.ContactID" class="btn btn-primary btn-sm">Create New Activity</a>
                </div>

            </div>
        </div>
    </div>


    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/script.min.js"></script>

</body>