    </div>
    <div class="row">
        <div class="col">
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    <p class="text-primary m-0 fw-bold">Company Information</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <dl>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Contact.Company)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Contact.Company.CompanyName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Contact.Location)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Contact.Location.LocationName)
                                </dd>
                             </dl>
                        </div>
                        <div class="col">
                            <dl>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Contact.State)
                            </dt>
