@page
@model CapstoneSalesCRM.Pages.Contacts.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<head>
    <script src="https://kit.fontawesome.com/cb166f3e9b.js" crossorigin="anonymous"></script>
</head>

@*<h1>Details</h1>*@
<body>
    <h1 class="text-primary m-0 fw-bold">
        @Html.DisplayFor(model => model.Contact.FirstName)
        @Html.DisplayFor(model => model.Contact.LastName)
